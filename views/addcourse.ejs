<%- include('partials/header') -%>

<div class="card card-compact md:card-normal md:w-fit lg:w-1/3 bg-base-100 shadow-xl mx-auto my-8">
    <div class="card-body mx-auto">
        <div class="card-title mx-auto">
            <h2 class="font-bold">Log New Continuing Education</h2>
        </div>

        <section class="font-medium">
            <form action="/course/addCourse" 
                enctype="multipart/form-data" 
                method="POST">

                <!-- Title of course -->
                <div class="mb-3">
                    <label for="title" class="label">
                        <span class="label-text text-lg">Title</span>
                    </label>
                    <input type="text" 
                        class="input input-bordered w-full max-w-xs bg-slate-50" 
                        id="title" 
                        name="title">
                </div>

                <!-- Name of presenter -->
                <div class="mb-3">
                    <label for="presenter" class="label">
                        <span class="label-text text-lg">Presenter</span>
                    </label>
                    <input type="text" 
                        class="input input-bordered w-full max-w-xs bg-slate-50" 
                        id="presenter" 
                        name="presenter">
                </div>

                <!-- Length of CE -->
                <div class="mb-3">
                    <label for="ceLength" class="label">
                        <span class="label-text text-lg">CE Length (in hours)</span>
                    </label>
                    <input type="number" 
                        min="0" 
                        step="0.1" 
                        class="input input-bordered w-full max-w-xs bg-slate-50" 
                        id="ceLength" 
                        name="ceLength">
                </div>

                <!-- Date completed -->
                <div class="mb-3">
                    <label for="completeDate" class="label">
                        <span class="label-text text-lg">Date Completed</span>
                    </label>
                    <input type="date"
                        class="input input-bordered w-full max-w-xs bg-slate-50" 
                        id="completeDate" 
                        name="completeDate" 
                        value="<%= today %>">
                </div>

                <!-- Course note -->
                <div class="mb-3">
                    <label for="courseNote" class="label">
                        <span class="label-text text-lg">Course Note</span>
                    </label>
                    <input type="text" 
                        class="input input-bordered w-full max-w-xs bg-slate-50" 
                        id="courseNote" 
                        name="courseNote">
                </div>

                <!-- Upload optional certificate -->
                <div class="mb-3">
                    <label for="imgUpload" class="label">
                        <span class="label-text text-lg">Certificate</span><span class="label-text-alt text-sm font-normal">(optional)</span>
                    </label>
                    <input type="file" 
                        class="file-input file-input-bordered file-input-info file-input-sm md:file-input-md w-full max-w-xs bg-slate-50" 
                        id="imageUpload" 
                        name="file">
                </div>

                <!-- Submit course or cancel -->
                <div class="flex flex-row mt-6 justify-between">
                    <button type="submit" class="btn btn-primary basis-1/3" value="Upload">Submit</button>
                    <a href="/dashboard" class="btn btn-error basis-1/3">Cancel</a>
                </div>
            </form>
        </section>
    </div>
</div>

<%- include('partials/footer') -%>
