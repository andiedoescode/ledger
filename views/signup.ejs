<%- include('partials/header') -%>
<main>
	<section
		class="max-w-sm px-4 md:px-0 md:max-w-md lg:w-1/3 mx-auto mt-8 text-lg">
		<% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
		<div class="alert alert-error"><%= el.msg %></div>
		<% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
		el => { %>
		<div class="alert alert-info"><%= el.msg %></div>
		<% }) %> <% } %>

		<form action="/signup" method="POST">
			<div class="mb-3">
				<label for="userName" class="label">User Name</label>
				<input
					type="text"
					class="form-control input input-bordered w-full max-w-xs bg-slate-50 md:max-w-md"
					id="userName"
					name="userName" />
			</div>

			<div class="mb-3">
				<label for="email" class="label">Email address</label>
				<input
					type="email"
					class="form-control input input-bordered w-full max-w-xs bg-slate-50 md:max-w-md"
					id="exampleInputEmail1"
					aria-describedby="emailHelp"
					name="email" />
				<div id="emailHelp" class="label-text-alt text-sm">
					We'll never share your email with anyone else.
				</div>
			</div>

			<div class="mb-3">
				<label for="password" class="label">Password</label>
				<input
					type="password"
					class="form-control input input-bordered w-full max-w-xs bg-slate-50 md:max-w-md"
					id="password"
					name="password" />
			</div>

			<div class="mb-3">
				<label for="confirmPassword" class="label">Confirm Password</label>
				<input
					type="password"
					class="form-control input input-bordered w-full max-w-xs bg-slate-50 md:max-w-md"
					id="confirmPassword"
					name="confirmPassword" />
			</div>

			<div class="flex my-7">
				<button type="submit" class="btn btn-secondary text-lg mx-auto">
					Sign Up
				</button>
			</div>
			<div class="text-center">
				<p>
					Have an account?
					<a href="/login" class="underline font-semibold">Log In</a>
				</p>
				<p class="italic">Test account available at log in.</p>
			</div>
		</form>
	</section>
</main>

<%- include('partials/footer') -%>
