<%- include('partials/header') -%>
  <div class="container">
    <a class="btn btn-primary" href="/profile">Your Profile</a>
    <a class="btn btn-primary" href="/addcourse">Add a CEU</a>
    <div class="row justify-content-center mt-5">
      <table>
        <thead>
          <tr>
            <th>Course Title</th>
            <th>Course Length</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
            <% if (courses.length > 0) { %>
              <% for(var i=0; i<courses.length; i++) { %>
                <tr>
                  <td>
                    <a href="/course/<%= courses[i]._id%>">
                      <%= courses[i].title %>
                    </a>
                  </td>
                  <td>
                      <%= courses[i].ceLength %>
                  </td>
                  <td>
                    <a href="/course/editCourse/<%= courses[i].id %>"
                      class="col-3">
                        <button class="btn btn-primary fa fa-edit"></button>
                    </a>
                    <form
                      action="/course/<%= courses[i].id %>?_method=DELETE"
                      method="POST"
                      class="col-3">
                      <button class="btn btn-primary fa fa-trash" type="submit"></button>
                    </form>
                  </td>
                </tr>
              <% } %>
            <% } else { %>
              <span>You do not have any logged courses yet.</span>
            <% } %>
        </tbody>
    </table>
    </div>
  </div>  
<%- include('partials/footer') -%>