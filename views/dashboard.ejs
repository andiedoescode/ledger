<%- include('partials/header') -%>
  <div class="container">
    <a class="btn btn-primary" href="/profile">Your Profile</a>
    <a class="btn btn-primary" href="/addcourse">Add a CEU</a>
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% if (courses.length > 0) { %>

          <% for(var i=0; i<courses.length; i++) { %>
            <li class="col-6 justify-content-between mt-5">
              <a href="/course/<%= courses[i]._id%>">
                <span><%= courses[i].title %></span>
                <span><%= courses[i].ceLength %></span>
              </a>
            </li>

          <% } %>
        <% } else { %>
          <span>You do not have any logged courses yet.</span>
        <% } %>
      </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>