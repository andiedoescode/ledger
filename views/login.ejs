<%- include('partials/header') -%>

<main>
  <!-- <section class="mt-5 md:max-w-md mx-auto text-lg"> -->
  <section class="max-w-sm px-4 md:px-0 md:max-w-md lg:w-1/3 mx-auto mt-8 text-lg">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="bg-warning alert alert-danger my-2"><%= el.msg %></div>
      <% }) %>
      <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
            <div class="bg-info alert alert-info"><%= el.msg %></div>
        <% }) %>
      <% } %>

      <form action="/login" method="POST" class="mx-auto">
        <div class="mb-3 items-stretch">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control input input-bordered w-full max-w-sm bg-slate-50 md:max-w-md"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control input input-bordered w-full max-w-sm bg-slate-50 md:max-w-md"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <div class="flex mx-auto">
          <button type="submit" class="btn btn-primary flex">Log In</button>
        </div>
        <div>
          <p class="text-center">Don't have an account? Sign up here</p>
        </div>
      </form>
  </section>
</main>

<%- include('partials/footer') -%>
